{
  "name": "mini-ts-http-server",
  "version": "1.0.0",
  "author": "konerds <adr10won@gmail.com>",
  "type": "commonjs",
  "scripts": {
    "check-modules": "npm-check-updates --target minor --peer",
    "check-modules:latest": "npm-check-updates --peer",
    "update-modules": "npm-check-updates -u --target minor --peer -u",
    "update-modules:latest": "npm-check-updates --peer -u",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --max-warnings=0",
    "postinstall": "husky",
    "lint-staged": "lint-staged",
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --passWithNoTests"
  },
  "dependencies": {
    "cross-env": "^10.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "npm-check-updates": "^19.0.0",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
